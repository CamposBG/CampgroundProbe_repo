<% layout('layouts/boilerplate.ejs') -%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-lable" for="title">Title</label>
                <!--campground[title] = everything gonna be stores as campground something  -->
                <input class="form-control" type="text" name="campground[title]" id="title" />
            </div>
            <div class="mb-3">
                <label class="form-lable" for="location">Location</label>
                <!--campground[title] = everything gonna be stores as campground something  -->
                <input class="form-control" type="text" name="campground[location]" id="location" />
            </div>

            <div class="mb-3">
                <label class="form-lable" for="image">Image Url</label>
                <!--campground[title] = everything gonna be stores as campground something  -->
                <input class="form-control" type="text" name="campground[image]" id="image" />
            </div>
            <div class="mb-3">
                <label class="form-lable" for="price">Price</label>

                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input
                        id="price"
                        type="text"
                        class="form-control"
                        placeholder="0.00"
                        aria-label="Price"
                        aria-describedby="price-label"
                        name="campground[price]"

                    />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-lable" for="description">Description</label>
                <!--campground[title] = everything gonna be stores as campground something  -->
                <textarea
                    class="form-control"
                    type="text"
                    name="campground[description]"
                    id="description"
                ></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success" type="submit">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All campgrounds</a>
    </div>
</div>
