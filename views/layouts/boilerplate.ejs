        <!-- form validation - use side -->
        <script>
            // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
          'use strict'
        
          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          const forms = document.querySelectorAll('.validated-form')
        
          // Loop over them and prevent submission
          Array.from(forms) // make an array from forms
            .forEach(function (form) { // call for each form section, just loop over from
              form.addEventListener('submit', function (event) { // add an event listener for each form 
                if (!form.checkValidity()) {// check its validity when the form is submitted 
                  event.preventDefault()
                  event.stopPropagation()// if it is not valid, prevent default and stop propagation 
                }
        
                form.classList.add('was-validated')
              }, false)
            })
        })()
        </script>
    </body>
